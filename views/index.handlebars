<!-- index -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <!-- search bar -->
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
      <!-- create new -->
      <a href="/restaurants/new">
        <button class="btn btn-primary mt-2" style="width: 100%;">新增餐廳</button>
      </a>
    </div>
  </div>
</div>

<!-- restaurant cards -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurants}}
        <div class="mb-4">
          <div class="card mb-1">
            <a href="/restaurants/{{this._id}}" style="text-decoration: none;">
              <!-- image -->
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <!-- body -->
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  <span class="ms-1">{{this.category}}</span>
                </div>
                <span class="badge bg-primary">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </a>
            <!--footer edit, detail , delete -->
            <div class="card-footer">
              <div class="float-end">
                <a href="/restaurants/{{this._id}}/edit" class="me-1">Edit</a>
                <a href="/restaurants/{{this._id}}" class="me-1">Detail</a>
                <!-- delete -->
                <button class="deleteButton btn btn-danger btn-sm " type="button" data-name="{{this.name}}"
                  data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleModal">
                  Delete
                </button>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

        <!-- Delete Modal -->
        <div class="modal fade" id="deleModal" tabindex="-1" aria-labelledby="deleModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">確定刪除： <span id="restaurantName"></span> ?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form id="delete-form" action="#" method="POST">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <!-- Modal end -->


      </div>
    </div>
  </div>
</div>